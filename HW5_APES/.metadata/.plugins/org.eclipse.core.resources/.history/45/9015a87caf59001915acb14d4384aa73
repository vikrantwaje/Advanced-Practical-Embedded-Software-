        //
        while(1)
        {
            //
            // Turn on the LED.
            //
            led_on(D1_LED_PORT,D1_LED_PIN);
            led_on(D2_LED_PORT,D2_LED_PIN);

           //GPIOPinWrite(GPIO_PORTN_BASE, GPIO_PIN_0, 0x01);

            //
            // Delay for a bit.
            //
            for(ui32Loop = 0; ui32Loop < 200000; ui32Loop++)
            {
            }

            //
            // Turn off the LED.
            //
            led_off(D1_LED_PORT, D1_LED_PIN);
            led_off(D2_LED_PORT, D2_LED_PIN);


            //
            // Delay for a bit.
            //
            for(ui32Loop = 0; ui32Loop < 200000; ui32Loop++)
            {
            }
        }


    //
