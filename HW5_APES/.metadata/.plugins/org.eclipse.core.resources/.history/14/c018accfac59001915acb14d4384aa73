/***********************************************************************************
 * @file myled.h
 * @brief Contains led control functions
 * @author Vikrant Waje
 * @date April 7, 2018
 *
 *****************************************************************************/
#ifndef INCLUDES_MYLED_H_
#define INCLUDES_MYLED_H_

//***********************************************************************************
//                              Include files
//***********************************************************************************
#include<stdint.h>
#include<stdbool.h>
#include "driverlib/sysctl.h"
#include "driverlib/gpio.h"
#include "inc/hw_memmap.h"


//***********************************************************************************
//                                  Macros
//***********************************************************************************
#define ON  (0x01)
#define OFF (0x00)
#define GREEN_LED_PORT (GPIO_PORTN_BASE)
#define GREEN_LED_PIN  (GPIO_PIN_0)



//***********************************************************************************
//                              Global variables
//***********************************************************************************


//***********************************************************************************
//                              Function Prototype
//***********************************************************************************
/*------------------------------------------------------------------------------------------------------------------------------------*/
/*
  @brief: Turn ON led.


 @param: Port: Port number
 @param: Pins: Pin number

 @return: None
 */
/*-----------------------------------------------------------------------------------------------------------------------------*/
void led_on(uint32_t ui32Port, uint8_t ui8Pins);

/*------------------------------------------------------------------------------------------------------------------------------------*/
/*
  @brief: Turn OFF led.

@param: Port: Port number
 @param: Pins: Pin number

 @return: None
 */
/*-----------------------------------------------------------------------------------------------------------------------------*/
void led_off(uint32_t ui32Port, uint8_t ui8Pins);



#endif /* INCLUDES_MYLED_H_ */
