 *
 *****************************************************************************************/

//***********************************************************************************
//                                  Include files
//***********************************************************************************
#include"myled.h"


//***********************************************************************************
//                                  Global variables
//***********************************************************************************


//***********************************************************************************
//                                 Function implementation
//***********************************************************************************
/*------------------------------------------------------------------------------------------------------------------------------------*/
/*
  @brief: Turn ON led.


 @param: Port: Port number
 @param: Pins: Pin number

 @return: None
 */
/*-----------------------------------------------------------------------------------------------------------------------------*/
void led_on(uint32_t ui32Port, uint8_t ui8Pins){
    GPIOPinWrite(ui32Port, ui8Pins, ON);

}

/*------------------------------------------------------------------------------------------------------------------------------------*/
/*
  @brief: Turn OFF led.

@param: Port: Port number
 @param: Pins: Pin number

 @return: None
 */
/*-----------------------------------------------------------------------------------------------------------------------------*/
void led_off(uint32_t ui32Port, uint8_t ui8Pins){
    GPIOPinWrite(ui32Port, ui8Pins, OFF);

}
